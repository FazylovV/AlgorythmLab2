<Window x:Class="AlgorythmLab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgorythmLab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Button Width="100" Height="50" Content="Towers" FontSize="17" Name="TowersButton" Click="TowersButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Width="100" Height="50" Content="Fractal" FontSize="17" Name="FractalButton" Click="FractalButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2"/>

        <TextBlock Text="Choose alg:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 100" FontSize="17" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
